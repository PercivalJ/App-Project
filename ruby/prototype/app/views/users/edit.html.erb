<h1>Edit this user!</h1>

<%= form_for @user do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :age %>
        <%= f.text_field :age %>
    </div>

    <div>
        <%= f.label :country %>
        <%= f.text_field :country %>
    </div>

    <br>

    <%= f.submit "Save these changes!" %>

<% end %>

<br>

<%= link_to "Back to the list!", users_path %>